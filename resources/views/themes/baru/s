            </div>
            <div class="card-body p-0">
                @php
                    $popularPosts = \App\Models\Posts::where('status', 'published')
                        ->orderBy('views', 'desc')
                        ->take(5)
                        ->get();
                @endphp
                @foreach($popularPosts as $index => $post)
                <div class="d-flex p-3 border-bottom">
                    <span class="badge bg-warning text-dark me-3 align-self-start">{{ $index + 1 }}</span>
                    <div class="flex-grow-1">
