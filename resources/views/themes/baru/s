@extends('themes.dinkes-theme.layouts.main', ['title' => 'Beranda - Dinkes Kota Ternate'])

@section('hero')
    @include('themes.dinkes-theme.layouts.hero')
@endsection

@section('content')
<div class="container py-5">
    <!-- Featured Posts -->
    <section class="mb-5">
        <div class="row mb-4">
            <div class="col-md-6">
                <h2 class="fw-bold text-primary">
                    <i class="fas fa-star me-2"></i>Berita Unggulan
                </h2>
                <p class="text-muted">Informasi terkini dari Dinkes Kota Ternate</p>
            </div>
            <div class="col-md-6 text-md-end">
                <a href="{{ route('posts.index') }}" class="btn btn-outline-warning">
                    <i class="fas fa-newspaper me-2"></i>Lihat Semua Berita
                </a>
            </div>
        </div>
        
        <div class="row">
            @php
                $featuredPosts = \App\Models\Posts::where('status', 'published')
                    ->where('is_featured', true)
                    ->latest()
                    ->take(6)
                    ->get();
            @endphp
            
            @foreach($featuredPosts as $index => $post)
            <div class="col-lg-{{ $index == 0 ? '6' : '3' }} col-md-6 mb-4">
                <div class="card h-100">
                    <div class="position-relative">
                        <img src="{{ $post->image }}" class="card-img-top" alt="{{ $post->title }}" 
                             style="height: {{ $index == 0 ? '300px' : '200px' }}; object-fit: cover;">
                        
                        @if($post->is_featured)
                        <span class="position-absolute top-0 start-0 m-3">
                            <span class="badge bg-danger">
                                <i class="fas fa-star me-1"></i>Featured
                            </span>
                        </span>
                        @endif
                        
                        @if(isset($post->category))
                        <span class="position-absolute top-0 end-0 m-3">
                            <span class="badge bg-warning text-dark">{{ $post->category->name }}</span>
                        </span>
                        @endif
                    </div>
                    
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ route('posts.show', $post->slug) }}" class="text-decoration-none text-dark">
                                {{ $index == 0 ? $post->title : Str::limit($post->title, 60) }}
                            </a>
                        </h5>
                        
                        @if($index == 0)
                        <p class="card-text text-muted">{{ Str::limit(strip_tags($post->content), 120) }}</p>
                        @endif
                        
                        <div class="d-flex justify-content-between align-items-center text-muted small">
                            <span>
                                <i class="fas fa-calendar me-1"></i>{{ $post->created_at->format('d M Y') }}
                            </span>
                            <span>
                                <i class="fas fa-eye me-1"></i>{{ number_format($post->views) }}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            @endforeach
        </div>
    </section>

    <!-- Services Section -->
    <section class="py-5 bg-light rounded" id="layanan">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold text-primary">Layanan Kesehatan</h2>
                <p class="text-muted">Berbagai layanan kesehatan yang tersedia</p>
            </div>
            
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <div class="display-4 text-warning mb-3">
                                <i class="fas fa-hospital"></i>
                            </div>
                            <h5 class="card-title">Puskesmas</h5>
                            <p class="card-text">Layanan kesehatan dasar di seluruh Kota Ternate</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <div class="display-4 text-warning mb-3">
                                <i class="fas fa-syringe"></i>
                            </div>
                            <h5 class="card-title">Imunisasi</h5>
                            <p class="card-text">Program imunisasi lengkap untuk semua usia</p>
                        </div>
                    </div>
                </div>
                
