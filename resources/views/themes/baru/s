@extends('themes.dinkes-theme.layouts.main', ['title' => $gallery->title . ' - Galeri'])

@push('head')
    <meta name="description" content="{{ Str::limit($gallery->description, 160) }}">
    <meta property="og:title" content="{{ $gallery->title }}">
    <meta property="og:description" content="{{ Str::limit($gallery->description, 160) }}">
    <meta property="og:image" content="{{ $gallery->image }}">
@endpush

@section('content')
<div class="container py-4">
    <div class="row">
        <div class="col-lg-8">
            <!-- Gallery Header -->
            <div class="card mb-4">
                <img src="{{ $gallery->image }}" class="card-img-top" alt="{{ $gallery->title }}" style="height: 400px; object-fit: cover;">
                <div class="card-body">
                    <h1 class="card-title fw-bold">{{ $gallery->title }}</h1>
                    <p class="card-text">{{ $gallery->description }}</p>
                    
                    <div class="d-flex justify-content-between align-items-center text-muted">
                        <span>
                            <i class="fas fa-calendar me-1"></i>{{ $gallery->created_at->format('d M Y') }}
                        </span>
                        <span>
                            <i class="fas fa-eye me-1"></i>{{ number_format($gallery->views) }} views
                        </span>
                    </div>
                </div>
            </div>

            <!-- Gallery Images -->
            @if(isset($gallery->images) && count($gallery->images) > 0)
            <div class="row">
                @foreach($gallery->images as $image)
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card">
                        <img src="{{ $image }}" class="card-img-top" alt="Gallery Image" 
                             style="height: 200px; object-fit: cover; cursor: pointer;" 
                             data-bs-toggle="modal" data-bs-target="#imageModal" 
                             onclick="showImage('{{ $image }}')">
                    </div>
                </div>
                @endforeach
            </div>
            @endif
        </div>
        
        @include('themes.dinkes-theme.layouts.sidebar')
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ $gallery->title }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" class="img-fluid" alt="Gallery Image">
            </div>
        </div>
    </div>
</div>

<script>
function showImage(imageSrc) {
    document.getElementById('modalImage').src = imageSrc;
}
</script>
@endsection
