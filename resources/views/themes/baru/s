## ðŸ“„ File: layouts/sidebar.blade.php

```php
<div class="col-lg-4">
    <div class="sidebar">
        
        <!-- Search Widget -->
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="fas fa-search me-2"></i>Pencarian</h5>
            </div>
            <div class="card-body">
                <form method="GET" action="{{ route('search') }}">
                    <div class="input-group">
                        <input type="text" name="q" class="form-control" placeholder="Cari berita..." value="{{ request('q') }}">
                        <button class="btn btn-warning" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Latest Posts -->
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="fas fa-newspaper me-2"></i>Berita Terbaru</h5>
            </div>
            <div class="card-body p-0">
                @php
                    $latestPosts = \App\Models\Posts::where('status', 'published')
                        ->latest()
                        ->take(5)
                        ->get();
                @endphp
                @foreach($latestPosts as $post)
                <div class="d-flex p-3 border-bottom">
                    <img src="{{ $post->image }}" alt="{{ $post->title }}" 
                         class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;">
                    <div class="flex-grow-1">
                        <h6 class="mb-1">
                            <a href="{{ route('posts.show', $post->slug) }}" class="text-decoration-none text-dark">
                                {{ Str::limit($post->title, 50) }}
                            </a>
                        </h6>
                        <small class="text-muted">
                            <i class="fas fa-calendar me-1"></i>{{ $post->created_at->format('d M Y') }}
                        </small>
                    </div>
                </div>
                @endforeach
            </div>
        </div>

        <!-- Categories -->
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="fas fa-folder me-2"></i>Kategori</h5>
            </div>
            <div class="card-body p-0">
                @php
                    $categories = \App\Models\Categories::withCount('posts')->take(8)->get();
                @endphp
                @foreach($categories as $category)
                <a href="{{ route('categories.show', $category->slug) }}" 
                   class="d-flex justify-content-between align-items-center p-3 border-bottom text-decoration-none text-dark">
                    <span>{{ $category->name }}</span>
                    <span class="badge bg-warning text-dark">{{ $category->posts_count }}</span>
                </a>
                @endforeach
            </div>
        </div>

        <!-- Popular Posts -->
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="fas fa-fire me-2"></i>Terpopuler</h5>
            </div>
            <div class="card-body p-0">
                @php
                    $popularPosts = \App\Models\Posts::where('status', 'published')
                        ->orderBy('views', 'desc')
                        ->take(5)
                        ->get();
                @endphp
                @foreach($popularPosts as $index => $post)
                <div class="d-flex p-3 border-bottom">
                    <span class="badge bg-warning text-dark me-3 align-self-start">{{ $index + 1 }}</span>
                    <div class="flex-grow-1">
                        <h6 class="mb-1">
                            <a href="{{ route('posts.show', $post->slug) }}" class="text-decoration-none text-dark">
                                {{ Str::limit($post->title, 50) }}
                            </a>
                        </h6>
                        <small class="text-muted">
                            <i class="fas fa-eye me-1"></i>{{ number_format($post->views) }} views
                        </small>
                    </div>
                </div>
                @endforeach
            </div>
        </div>

        <!-- Quick Links -->
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="fas fa-link me-2"></i>Tautan Cepat</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="#" class="btn btn-outline-warning btn-sm">
                        <i class="fas fa-hospital me-2"></i>Puskesmas Terdekat
                    </a>
                    <a href="#" class="btn btn-outline-warning btn-sm">
                        <i class="fas fa-syringe me-2"></i>Jadwal Imunisasi
                    </a>
                    <a href="#" class="btn btn-outline-warning btn-sm">
                        <i class="fas fa-heartbeat me-2"></i>Program KB
                    </a>
                    <a href="#" class="btn btn-outline-warning btn-sm">
                        <i class="fas fa-phone me-2"></i>Kontak Darurat
                    </a>
                </div>
            </div>
        </div>

        <!-- Emergency Numbers -->
        <div class="card mb-4 border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-ambulance me-2"></i>Nomor Darurat</h5>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <h3 class="text-danger mb-3">119</h3>
                    <p class="mb-2"><strong>Ambulans Dinkes</strong></p>
                    <hr>
                    <p class="mb-1"><strong>Polisi:</strong> 110</p>
                    <p class="mb-1"><strong>Pemadam:</strong> 113</p>
                    <p class="mb-0"><strong>SAR:</strong> 115</p>
                </div>
            </div>
        </div>

    </div>
</div>
