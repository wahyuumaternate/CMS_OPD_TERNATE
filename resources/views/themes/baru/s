@extends('themes.dinkes-theme.layouts.main', ['title' => 'Pencarian: ' . request('q')])

@section('content')
<div class="container py-4">
    <!-- Search Header -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="bg-light p-4 rounded">
                <h1 class="fw-bold mb-3">
                    <i class="fas fa-search me-2"></i>Hasil Pencarian
                </h1>
                
                <!-- Search Form -->
                <form method="GET" action="{{ route('search') }}" class="mb-3">
                    <div class="input-group input-group-lg">
                        <input type="text" name="q" class="form-control" 
                               placeholder="Cari berita, artikel, atau informasi..." 
                               value="{{ request('q') }}">
                        <button class="btn btn-warning" type="submit">
                            <i class="fas fa-search me-1"></i>Cari
                        </button>
                    </div>
                </form>
                
                @if(request('q'))
                <p class="text-muted mb-0">
                    Menampilkan hasil pencarian untuk: <strong>"{{ request('q') }}"</strong>
                    @if(isset($posts) && $posts->total() > 0)
                        ({{ $posts->total() }} hasil ditemukan)
                    @endif
                </p>
                @endif
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            @if(request('q'))
                @if(isset($posts) && $posts->count() > 0)
                    <!-- Search Results -->
                    @foreach($posts as $post)
                    <div class="card mb-4">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <div class="position-relative">
                                    <img src="{{ $post->image }}" class="img-fluid rounded-start h-100" 
                                         alt="{{ $post->title }}" style="object-fit: cover;">
                                    
                                    @if($post->is_featured)
                                    <span class="position-absolute top-0 start-0 m-2">
                                        <span class="badge bg-danger">
                                            <i class="fas fa-star me-1"></i>Featured
                                        </span>
                                    </span>
                                    @endif
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title mb-0">
                                            <a href="{{ route('posts.show', $post->slug) }}" class="text-decoration-none text-dark">
                                                {{ $post->title }}
                                            </a>
                                        </h5>
                                        @if(isset($post->category))
                                        <span class="badge bg-warning text-dark">{{ $post->category->name }}</span>
                                        @endif
                                    </div>
                                    
                                    <p class="card-text">{{ Str::limit(strip_tags($post->content), 150) }}</p>
                                    
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="text-muted small">
                                            <span class="me-3">
                                                <i class="fas fa-calendar me-1"></i>{{ $post->created_at->format('d M Y') }}
                                            </span>
                                            <span class="me-3">
                                                <i class="fas fa-user me-1"></i>{{ $post->author }}
                                            </span>
                                            <span>
                                                <i class="fas fa-eye me-1"></i>{{ number_format($post->views) }}
                                            </span>
                                        </div>
                                        
                                        <a href="{{ route('posts.show', $post->slug) }}" class="btn btn-outline-warning btn-sm">
                                            Baca Selengkapnya
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @endforeach

                    <!-- Pagination -->
                    @if($posts->hasPages())
                    <div class="d-flex justify-content-center mt-4">
                        {{ $posts->appends(request()->query())->links() }}
                    </div>
                    @endif
                @else
                    <!-- No Results -->
                    <div class="text-center py-5">
                        <i class="fas fa-search fa-5x text-muted mb-4"></i>
                        <h3 class="text-m# Dinkes Theme - Complete Structure

